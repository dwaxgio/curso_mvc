
@{
    ViewBag.Title = "Index";
}

<!-- 2. Creo formulario -->
<div class="row">
    <form id="frm">
        <div class="col-lg-6 col-lg-offset-3">
            Usuario:
            <input type="text" name="user" />
            Password:
            <input type="password" name="password" />
            <input type="submit" class="btn btn-success" value="Entrar" />
        </div>
    </form>
</div>


@section scripts
{
    <script>
        $(document).ready(function () // 3. utilizo ajax para enviar información de formulario a metodo del controlador
        {
            $("#frm").submit(function (e) {
                e.preventDefault();

                url = "@Url.Content("~/Access/Enter")" // ~/ me lleva a la raiz sin importar la ubicación
                parametros = $(this).serialize();

                $.post(url, parametros, function (data) {
                    if (data == "1") {
                        document.location.href = "@Url.Content("~/")";
                    }
                    else {
                        alert(data)
                    }
                })
            })
        })
    </script>
}

